<turbo-frame id = 'body' class = 'col-9 ml-auto'>
  <div class = 'row chapter'>
    <div class = 'col'> <h2><%= @act.name %></h2></div>
    <%= render partial: 'information', locals: { act: @act} %>

    <div class = 'col'> <h3>Сюжет</h3></div>
    <%= render partial: 'plot', locals: { act: @act} %>

    <div class = 'col'><h3>Персонажи акта</h3></div>
    <%= render partial: 'characters/characters_block',
               locals: {
                 act: @act,
                 campaign: @act.campaign,
                 master_characters: @act.master_characters,
                 enemies: @act.enemies
               } %>
  </div>
</turbo-frame>
