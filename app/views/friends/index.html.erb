<div class = 'body col-9'>
  <div class = 'row'>
    <div class = 'col-6'>
      <%= render partial: 'search_friends', locals: { possible_friends: @possible_friends } %>
    </div>
  </div>

  <div class = 'friends row'>
    <h3>Ваши друзья</h3>
    <% @friends.each do |friend| %>
      <div class = 'col-2'>
        <%= render partial: 'friend', locals: { friend: friend } %>
      </div>
    <% end %>
  </div>

  <div class = 'row'>
    <div class= 'col-3'>
      <%= render partial: 'friendship_requests' %>
    </div>
  </div>
</div>