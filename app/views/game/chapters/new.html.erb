<turbo-frame id = 'chapters'>
  <h3>Новая глава:</h3>
  <%= form_with model: [:game, @chapter] do |form| %>
    <% puts new_chapter_fields.inspect %>
    <% new_chapter_fields.each_pair do |field_name, field_params| %>
      <%= form.label(field_params[:label], class: 'form-label') if field_params[:label].present? %>
      <div class = 'input-group'>
        <%= form.send(field_params[:input], field_name, class: 'form-control', id: field_params[:ckeditor_id]) %>
      </div>
    <% end %>

    <%= form.submit 'Создать', class: 'btn btn-success' %>
  <% end %>
  <%= link_to 'Отмена', :back %>
</turbo-frame>