<%= turbo_frame_tag dom_id(chapter) do %>
  <div class = 'chapter_block'
       data-controller = 'expand'
       data-expand-inactive-text = '+'
       data-expand-active-text = '-'
  >

    <turbo_frame class = 'd-flex justify-content-between'>
      <%= link_to(game_chapter_path(chapter), 'data-turbo-frame' => "_top") do %>
        <h5><%= "Глава #{chapter.position}. #{chapter.name}"%></h5>
      <% end %>

      <button class = 'btn btn-primary'
              data-expand-target = 'expandButton'
              data-action = "expand#expand"
      >
      </button>
    </turbo_frame>

    <ul type = 'square' class = 'acts_block' data-expand-target = 'expandValue'>
      <% if chapter.acts.present? %>
        <% chapter.acts.each_with_index do |act, index| %>
          <li><h6><%= "Aкт #{act.position}. #{act.name}"%></h6></li>
        <% end %>
      <% else %>
        Акты еще не добавлены
      <% end %>
    </ul>
  </div>
<% end %>
