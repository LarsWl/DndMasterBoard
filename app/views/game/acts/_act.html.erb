<%= turbo_frame_tag dom_id(act),
                    class: 'act_block',
                    data: {
                      controller: 'expand',
                      'expand-inactive-text' => '+',
                      'expand-active-text' => '-'
                    } do %>
  <div class = 'd-flex justify-content-between'>
    <%= link_to(act_path(act), 'data-turbo-frame' => "_top") do %>
      <h5><%= "Акт #{act.position}. #{act.name}"%></h5>
    <% end %>

    <button class = 'btn btn-primary'
            data-expand-target = 'expandButton'
            data-action = "expand#expand"
    >
    </button>
  </div>

  <div data-expand-target = 'expandValue'>
    <%= sanitize act.description %>
  </div>
<% end %>